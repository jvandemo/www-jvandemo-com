header.site-header
    .container
        .row
            .col-xs-10.col-xs-offset-1.col-md-8.col-md-offset-2
                ul
                    li(ng-class="{active: ($state.includes('articles') || $state.includes('article'))}")
                        a(ui-sref="articles") Articles

                    li(ng-class="{active: $state.includes('about')}")
                        a(ui-sref="about") About

                    li(ng-class="{active: $state.includes('hire-me')}")
                        a(ui-sref="hire-me") Hire me
